# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database - PostgreSQL with Sequelize
DB_HOST=localhost
DB_PORT=5432
DB_NAME=salon_booking
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres

# Database URL (alternative to individual configs)
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/salon_booking

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Payment Gateway (Choose one)
PAYMENT_PROVIDER=stripe

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Razorpay (Alternative)
# RAZORPAY_KEY_ID=rzp_test_xxxxx
# RAZORPAY_KEY_SECRET=xxxxx

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@saloonbooking.com

# SMS Configuration (Twilio - Optional)
TWILIO_ACCOUNT_SID=xxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Redis (Optional - for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Business Configuration
BOOKING_TOKEN_AMOUNT=500
CURRENCY=USD
SLOT_LOCK_DURATION_MINUTES=5
CANCELLATION_WINDOW_HOURS=24

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Security
BCRYPT_SALT_ROUNDS=10

# Test Database (for running tests)
TEST_DB_NAME=salon_booking_test
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=your_password_here
